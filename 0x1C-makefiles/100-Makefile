CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

.PHONY: all clean oclean fclean re

$(NAME): $(OBJ)
	$(CC) -Wall -Werror -Wextra -pedantic $^ -o $@

all: $(NAME)

clean:
	$(RM) $(OBJ) *~ $(NAME)

oclean: clean

fclean: clean
	$(RM) $(NAME)

re: fclean all

ifneq ($(wildcard m.h),m.h)
$(error m.h not found!)
endif
